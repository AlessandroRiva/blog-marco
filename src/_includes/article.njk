---
layout: 'base.njk'
---
<div class="container mx-auto">
    <a class="btn btn-link pl-0 mt-10" href="/blog">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
        <path fill-rule="evenodd" d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
    </svg>
    Torna al Blog
</a>
<section class="my-10 px-3 mx-auto max-w-prose">



<h1 class="font-bold text-4xl mt-10">{{ title }}</h1>

<p class="my-5">Scritto da <span class="italic">{{ author }}</span> il <span class="italic">{{ date | postDate }}</span>

<div class="card-actions">
    {%- for tag in tags -%}
        <a class="badge badge-outline" href="/tags/{{ tag }}/">{{ tag }}</a>
    {%- endfor -%}
</div>

<div class="my-10">
    <img src="{{ image }}" alt="{{ imageAlt }}" />
</div>

<div class="prose">

{{ content | safe }}

</div>

{%- if collections.post %}
{%- set previousPost = collections.post | getPreviousCollectionItem %}
{%- set nextPost = collections.post | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<ul class="md:flex md:justify-between mt-16">
	{%- if previousPost %}
    <li class="flex-1">
        <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                <path fill-rule="evenodd" d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
            </svg> 
            <p>Precedente</p>
        </div>
        <a class="btn-link font-medium p-0" href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
        </li>
    {% endif %}
	{%- if nextPost %}
    <li class="flex-1 text-right mt-4 pt-3 border-t border-neutral-300 md:mt-0 md:pt-0 md:border-none">
        <div class="flex items-center justify-end">
            <p>Prossimo</p>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
            </svg>
        </div>
        <a class="btn-link font-medium p-0" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
        </li>
    {% endif %}
</ul>
{%- endif %}
{%- endif %}

</section>
</div>