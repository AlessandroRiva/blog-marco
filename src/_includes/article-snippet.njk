<li class="card card-compact card-bordered bg-base-100 shadow-xl">
      <figure>
        <img class="object-cover w-full"
          src="{{ post.data.image }}"
          alt="Shoes"
        />
      </figure>
      <div class="card-body">
        <div class="flex justify-between items-center  mt-3">
        <p class="font-medium capitalize">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5 align-bottom inline-block">
                <path fill-rule="evenodd" d="M5.75 2a.75.75 0 0 1 .75.75V4h7V2.75a.75.75 0 0 1 1.5 0V4h.25A2.75 2.75 0 0 1 18 6.75v8.5A2.75 2.75 0 0 1 15.25 18H4.75A2.75 2.75 0 0 1 2 15.25v-8.5A2.75 2.75 0 0 1 4.75 4H5V2.75A.75.75 0 0 1 5.75 2Zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75Z" clip-rule="evenodd" />
            </svg>
            {{ post.data.date | postDate }}
        </p>
        <p class="text-right">{{ post.data.author }}</p>
        </div>
        <h2 class="card-title my-3 text-2xl">{{ post.data.title }}</h2>
        
        <p class="mb-3">
          {{ post.data.description }}
        </p>
        <div class="card-actions">
            {%- for tag in post.data.tags -%}
          <div class="badge badge-outline">{{ tag }}</div>
            {%- endfor -%}
        </div>
        <div class="card-actions justify-end">
          <a href="{{ post.url }}" class="btn btn-neutral">Leggi Ora</a>
        </div>
      </div>
    </li>